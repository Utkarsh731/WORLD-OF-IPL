let auth = `Bearer ${window.location.host.split(".")[0] === 'app' ? sessionStorage.token : localStorage.token}`;
let tenant = window.location.host.split(".")[0] === 'app' ? sessionStorage.tenant : localStorage.tenant;
let headers = { headers: { "X-Authorization": auth, name: tenant, "x-project-id": localStorage.selectedProjectId } };

class AllDevices extends React.Component {
	state = {
		getCounterData : {
			seasons: 0,
           matches: 0,
          venues:0,             
           cities: 0
		}
	}

	componentWillMount() {
		this.getCounterData();
	}

	getCounterData = () => {
		let url = window.location.origin + '/api/faas/gateway/api/v1/counters/matches/cities/venues/sessions'
		axios.get(url, headers)
			.then(res => {
				const getCounterData = res.data.data;
				this.setState({ getCounterData})
			})
	}

	render() {
		return (
			<React.Fragment>
				<div className="contentBox">
					<div className="pageBreadcrumb">
						<h6>Indian Premiere League</h6>
					</div>
					<ul className="counterList listStyleNone flex">
						<li className="fx-b25">
							<div className="custom-card custom-card-purple">
								<h6>Total Seasons</h6>
								<h5>{this.state.getCounterData.seasons}</h5>
								<div className="custom-card-icon custom-card-icon-purple"><i class="fa fa-globe" aria-hidden="true"></i></div>
							</div>
						</li>
						<li className="fx-b25">
							<div className="custom-card custom-card-green">
								<h6>Total Matches</h6>
								<h5>{this.state.getCounterData.matches}</h5>
								<div className="custom-card-icon custom-card-icon-green"><i class="fa fa-trophy" aria-hidden="true"></i></div>
							</div>
						</li>
						<li className="fx-b25">
							<div className="custom-card custom-card-red">
								<h6>Total Venues</h6>
								<h5>{this.state.getCounterData.venues}</h5>
								<div className="custom-card-icon custom-card-icon-red"><i className="fad fa-university" aria-hidden="true"></i></div>
							</div>
						</li>
						<li className="fx-b25">
							<div className="custom-card custom-card-orange">
								<h6>Total Cities</h6>
								<h5>{this.state.getCounterData.cities}</h5>
								<div className="custom-card-icon custom-card-icon-orange"><i className="fad fa-map-marker-alt text-danger"></i></div>
							</div>
						</li>
					</ul>
				</div>
			</React.Fragment>
		)
	}
}

ReactDOM.render(<AllDevices />, document.querySelector("#app"))
